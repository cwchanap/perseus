{
	"name": "perseus",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"packageManager": "bun@1.3.1",
	"workspaces": [
		"apps/*"
	],
	"scripts": {
		"dev": "turbo dev",
		"build": "turbo build",
		"start": "turbo start",
		"preview": "turbo preview",
